{
    "builders": [
        {

            "type": "qemu",
            "qemu_binary": "qemu-system-i386",        

            "vm_name": "alpinelinux.raw",
            "headless": false,

            "cpus": 4,
            "memory": 4096,

            "disk_size": 500,
            "disk_interface": "ide",
            "format": "raw",

            "iso_url": "https://dl-cdn.alpinelinux.org/alpine/v3.13/releases/x86/alpine-virt-3.13.5-x86.iso",
            "iso_checksum": "sha256:cf7ca3ae1459a2b8e973decd74ae939e70d09e14fdeb8edc6c064d7d27e4ea83",                       

            "communicator": "none",

            "boot_wait": "50s",
            "boot_command": [

                "root",
                "<enter><wait3>",

                "setup-alpine",
                "<enter><wait3>",
                "us", "<enter><wait1>",
                "us", "<enter><wait3>",
                "<enter><wait1>",
                "<enter><wait1>",
                "<enter><wait1>",
                "<enter><wait6>",
                "toor", "<enter><wait1>",
                "toor", "<enter><wait6>",
                "<enter><wait6>",
                "<enter><wait3>",
                "<enter><wait3>",
                "none", "<enter><wait1>",
                "sda", "<enter><wait1>",
                "sys", "<enter><wait3>",
                "y", "<enter><wait50>",

                "mount /dev/sda3 /mnt",
                "<enter><wait1>",

                "apk add --initdb --keys-dir /etc/apk/keys --repositories-file /etc/apk/repositories --root /mnt gcc python3",
                "<enter><wait30>",

                "apk add gcc make musl-dev",
                "<enter><wait10>",
                "wget http://mirror.netcologne.de/savannah/tinycc/tcc-0.9.27.tar.bz2",
                "<enter><wait6>",
                "tar -xf tcc-0.9.27.tar.bz2",
                "<enter><wait3>",
                "cd tcc-0.9.27",
                "<enter><wait1>",
                "./configure --config-musl",
                "<enter><wait6>",
                "make -j 4",
                "<enter><wait60>",
                # TODO: copy directory
                "make install DESTDIR=/mnt",
                "<enter><wait3>", 
                
                "sed -i 's/quiet/quiet console=ttyS0,9600/g' /mnt/etc/update-extlinux.conf",
                "<enter><wait1>",
                "sed -i 's/serial_port=.*/serial_port=0/g' /mnt/etc/update-extlinux.conf",
                "<enter><wait1>",
                "sed -i 's/serial_baud=.*/serial_baud=9600/g' /mnt/etc/update-extlinux.conf",
                "<enter><wait1>",
                "sed -i 's/timeout=.*/timeout=1/g' /mnt/etc/update-extlinux.conf",
                "<enter><wait1>",
                "reboot",
                "<enter><wait50>",
                "root", "<enter><wait1>",
                "toor", "<enter><wait1>",
                "update-extlinux",
                "<enter><wait3>",

                "poweroff",
                "<enter>"

            ]
        }
    ]
}