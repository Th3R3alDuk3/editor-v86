{
    "builders": [
        {
            "type": "qemu",
            "qemu_binary": "qemu-system-i386",        

            "vm_name": "archlinux32.img",
            "headless": true,

            "cpus": 4,
            "memory": 4096,

            "disk_size": 2000,
            "disk_interface": "ide",
            "format": "raw",

            "iso_url": "https://mirror.archlinux32.org/archisos/archlinux32-2021.04.06-i686.iso",
            "iso_checksum": "md5:575da7d4a1ab606b1ca97cc0ab417e7f",                       

            "ssh_pty": true,
            "ssh_timeout": "120s",
            "ssh_port": 22,
            "ssh_username": "root",
            "ssh_password": "toor",

            "boot_wait": "3s",
            "boot_command": [
                "<enter><wait90>",
                "echo 'root:toor' | chpasswd<enter><wait3>",
                "systemctl start sshd<enter>"
            ],
            
            "shutdown_command": "shutdown -P now"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "2.sh"
            ]
        }
    ]
  }